<div id="header">
  <body id="mainScreen" background="/images/abilities.jpg">  
 <h1 id ="abilitiesHeader">SPECIAL ABILITIES</h1>
<div>
<table id="myTable" style="width:75%">
    <tr> 
      <th>Name</th>
      <th>Attack Buff</th>
      <th>Defense Buff</th> 
      <th>Health Buff</th> 
    </tr> 
    <tbody>
        {{#each abilities}} 
        <tr> 
            <td>{{name}}</td> 
            <td>{{attack_buff}}</td>
            <td>{{defense_buff}}</td> 
            <td>{{health_buff}}</td>
            <td><button onclick="deleteAbility({{id}})">Delete</button></td>
        </tr> 
        {{/each}} 
    </tbody>
</table> 
<h3 id ="abilitiesHeader"> Add a New Special Ability:</h3>
<form id="newAbility" action="/abilities" method="post">
    <strong>Ability Name: <input type="text" name="name"><br>
    Attack Buff: <input type="number" name="attack_buff"><br>
    Defense Buff: <input type="number" name="defense_buff"><br>
    Health Buff: <input type="number" name="health_buff"><br>
  </strong>
    <input type="submit" value="Submit">
 </form> 
</body>
</div>
